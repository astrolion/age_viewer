{
    "manifest_version": 3,
    "name": "Age Viewer",
    "version": "1.0",
    "description": "Calculates and shows your age (years, months, days) based on birthday. Input birthday in popup or options page.",
    "permissions": ["storage", "notifications"],
    "background": {
      "service_worker": "background.js" 
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Age Viewer (Click to enter birthday)"
    },
    "options_page": "options.html"
  }
  