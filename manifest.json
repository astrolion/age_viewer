{
    "manifest_version": 3,
    "name": "Age Viewer",
    "version": "1.0",
    "description": "Calculates and shows your age (years, months, days) based on birthday. Input birthday in popup or options page.",
    "permissions": ["storage", "notifications", "nativeMessaging"],
    "background": {
      "service_worker": "scripts/background.js",
      "type": "module" 
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Age Viewer (Click to enter birthday)",
      "action": "scripts/popup.js"
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
    
  }
  